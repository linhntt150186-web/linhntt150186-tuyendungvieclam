@model JobHubMVC.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="flex justify-center">
            <i class="fas fa-briefcase text-4xl text-blue-600"></i>
        </div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Tạo tài khoản mới
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Hoặc
            <a asp-action="Login" class="font-medium text-blue-600 hover:text-blue-500">
                đăng nhập vào tài khoản có sẵn
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form asp-action="Register" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
                
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700">Họ và tên</label>
                    <div class="mt-1">
                        <input asp-for="FullName" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                    <div class="mt-1">
                        <input asp-for="Email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Role" class="block text-sm font-medium text-gray-700">Loại tài khoản</label>
                    <div class="mt-1">
                        <select asp-for="Role" class="block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                            <option value="JobSeeker">Người tìm việc</option>
                            <option value="Employer">Nhà tuyển dụng</option>
                        </select>
                        <span asp-validation-for="Role" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Mật khẩu</label>
                    <div class="mt-1">
                        <input asp-for="Password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Xác nhận mật khẩu</label>
                    <div class="mt-1">
                        <input asp-for="ConfirmPassword" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Đăng ký
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>