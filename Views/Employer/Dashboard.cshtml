@model List<JobHubMVC.Models.Job>
@{
    ViewData["Title"] = "Dashboard Nhà tuyển dụng";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard Nhà tuyển dụng</h1>
            <p class="text-gray-600">Quản lý tin tuyển dụng và đơn ứng tuyển</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
                <p class="text-green-700">@TempData["Success"]</p>
            </div>
        }

        <!-- Quick Actions -->
        <div class="mb-8">
            <a asp-action="PostJob" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium inline-flex items-center">
                <i class="fas fa-plus mr-2"></i>Đăng tin tuyển dụng mới
            </a>
        </div>

        <!-- My Jobs -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Tin tuyển dụng của tôi</h3>
            </div>
            
            @if (Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Công việc</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Đơn ứng tuyển</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày đăng</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var job in Model)
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <img src="@job.ImageUrl" alt="@job.Company" class="w-10 h-10 rounded-lg object-cover mr-4">
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">@job.Title</div>
                                                <div class="text-sm text-gray-500">@job.Location</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="@(job.Status == JobStatus.Active ? "bg-green-100 text-green-800" : job.Status == JobStatus.Pending ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800") px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                                            @(job.Status == JobStatus.Active ? "Hoạt động" : job.Status == JobStatus.Pending ? "Chờ duyệt" : "Không hoạt động")
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">@job.Applications.Count đơn</div>
                                        <div class="text-sm text-gray-500">
                                            @job.Applications.Count(a => a.Status == ApplicationStatus.Pending) chờ xử lý
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        @job.CreatedAt.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex space-x-2">
                                            <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" 
                                               class="text-blue-600 hover:text-blue-900">Xem</a>
                                            <a asp-action="Applications" asp-route-jobId="@job.Id" 
                                               class="text-green-600 hover:text-green-900">Đơn ứng tuyển</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-6 text-center">
                    <i class="fas fa-briefcase text-4xl text-gray-400 mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có tin tuyển dụng nào</h3>
                    <p class="text-gray-600 mb-6">Hãy bắt đầu đăng tin tuyển dụng đầu tiên của bạn</p>
                    <a asp-action="PostJob" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        Đăng tin ngay
                    </a>
                </div>
            }
        </div>
    </div>
</div>