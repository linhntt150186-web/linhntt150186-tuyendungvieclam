@model JobHubMVC.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-md">
            <!-- Header -->
            <div class="px-8 py-6 border-b border-gray-200">
                <h1 class="text-3xl font-bold text-gray-900">Hồ sơ cá nhân</h1>
                <p class="text-gray-600 mt-1">Quản lý thông tin cá nhân của bạn</p>
            </div>

            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="mx-8 mt-6 bg-green-50 border border-green-200 rounded-md p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle text-green-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700">@TempData["Success"]</p>
                        </div>
                    </div>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="mx-8 mt-6 bg-red-50 border border-red-200 rounded-md p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-red-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">@TempData["Error"]</p>
                        </div>
                    </div>
                </div>
            }

            <!-- Form -->
            <form asp-action="Index" method="post" class="px-8 py-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600 mb-6"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Full Name -->
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">
                            Họ và tên <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="FullName" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                        <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Email (readonly) -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                            Email
                        </label>
                        <input asp-for="Email" readonly
                               class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-500 cursor-not-allowed" />
                        <p class="text-xs text-gray-500 mt-1">Email không thể thay đổi</p>
                    </div>

                    <!-- Phone -->
                    <div>
                        <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-2">
                            Số điện thoại
                        </label>
                        <input asp-for="Phone" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="0901234567" />
                        <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Company -->
                    <div>
                        <label asp-for="Company" class="block text-sm font-medium text-gray-700 mb-2">
                            Công ty
                        </label>
                        <input asp-for="Company" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                               placeholder="Tên công ty hiện tại" />
                        <span asp-validation-for="Company" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Role (readonly) -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Loại tài khoản
                        </label>
                        <div class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-50 text-gray-700">
                            @(Model.Role switch
                            {
                                UserRole.Admin => "Quản trị viên",
                                UserRole.Employer => "Nhà tuyển dụng",
                                UserRole.JobSeeker => "Người tìm việc",
                                _ => "Không xác định"
                            })
                        </div>
                        <p class="text-xs text-gray-500 mt-1">Loại tài khoản không thể thay đổi</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-between pt-8 border-t border-gray-200 mt-8">
                    <div class="flex space-x-4">
                        @if (Model.Role == UserRole.JobSeeker)
                        {
                            <a asp-controller="Application" asp-action="MyApplications" 
                               class="text-blue-600 hover:text-blue-700 font-medium">
                                <i class="fas fa-file-alt mr-2"></i>Xem đơn ứng tuyển
                            </a>
                        }
                    </div>
                    <div class="flex space-x-4">
                        <a asp-controller="Home" asp-action="Index" 
                           class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors">
                            Hủy
                        </a>
                        <button type="submit" 
                                class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors font-medium">
                            <i class="fas fa-save mr-2"></i>Lưu thay đổi
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>