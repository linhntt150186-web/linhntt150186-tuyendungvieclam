@model List<JobHubMVC.Models.Application>
@{
    ViewData["Title"] = "Quản lý đơn ứng tuyển";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Quản lý đơn ứng tuyển</h1>
            <p class="text-gray-600">Xem tất cả đơn ứng tuyển trong hệ thống</p>
        </div>

        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ứng viên</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Công việc</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thư giới thiệu</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày ứng tuyển</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var app in Model)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                                            <i class="fas fa-user text-blue-600"></i>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@app.Applicant.FullName</div>
                                            <div class="text-sm text-gray-500">@app.Applicant.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">@app.Job.Title</div>
                                    <div class="text-sm text-gray-500">@app.Job.Company</div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-900 max-w-xs">
                                        @(app.CoverLetter.Length > 100 ? app.CoverLetter.Substring(0, 100) + "..." : app.CoverLetter)
                                    </div>
                                    @if (!string.IsNullOrEmpty(app.CvUrl))
                                    {
                                        <a href="@app.CvUrl" target="_blank" class="text-blue-600 hover:text-blue-900 text-sm">
                                            <i class="fas fa-file-pdf mr-1"></i>Xem CV
                                        </a>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@(app.Status == ApplicationStatus.Pending ? "bg-yellow-100 text-yellow-800" : app.Status == ApplicationStatus.Accepted ? "bg-green-100 text-green-800" : app.Status == ApplicationStatus.Reviewed ? "bg-blue-100 text-blue-800" : "bg-red-100 text-red-800") px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                                        @(app.Status == ApplicationStatus.Pending ? "Chờ xử lý" : app.Status == ApplicationStatus.Accepted ? "Chấp nhận" : app.Status == ApplicationStatus.Reviewed ? "Đã xem" : "Từ chối")
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @app.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-6">
            <a asp-action="Index" class="text-blue-600 hover:text-blue-700 font-medium">
                ← Quay lại Dashboard
            </a>
        </div>
    </div>
</div>