@model List<JobHubMVC.Models.ApplicationUser>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Quản lý người dùng</h1>
            <p class="text-gray-600">Xem và quản lý tất cả tài khoản người dùng</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
                <p class="text-green-700">@TempData["Success"]</p>
            </div>
        }

        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Người dùng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Loại tài khoản</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Công ty</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày tạo</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center mr-4">
                                            <i class="fas fa-user text-gray-600"></i>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@user.FullName</div>
                                            <div class="text-sm text-gray-500">@user.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@(user.Role == UserRole.Admin ? "bg-red-100 text-red-800" : user.Role == UserRole.Employer ? "bg-blue-100 text-blue-800" : "bg-green-100 text-green-800") px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                                        @(user.Role == UserRole.Admin ? "Quản trị viên" : user.Role == UserRole.Employer ? "Nhà tuyển dụng" : "Người tìm việc")
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @(user.Company ?? "Không có")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @user.CreatedAt.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex space-x-2">
                                        <button class="text-blue-600 hover:text-blue-900">Xem chi tiết</button>
                                        @if (user.Role != UserRole.Admin)
                                        {
                                            @if (user.LockoutEnd == null || user.LockoutEnd < DateTimeOffset.UtcNow)
                                            {
                                                <form asp-action="LockUser" method="post" class="inline">
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="text-red-600 hover:text-red-900">Khóa</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-red-500">Đã khóa</span>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>