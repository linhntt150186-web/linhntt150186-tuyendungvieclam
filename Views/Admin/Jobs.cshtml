@model List<JobHubMVC.Models.Job>
@{
    ViewData["Title"] = "Quản lý việc làm";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Quản lý việc làm</h1>
            <p class="text-gray-600">Duyệt và quản lý tất cả tin tuyển dụng</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
                <p class="text-green-700">@TempData["Success"]</p>
            </div>
        }

        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Công việc</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nhà tuyển dụng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày đăng</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var job in Model)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <img src="@job.ImageUrl" alt="@job.Company" class="w-10 h-10 rounded-lg object-cover mr-4">
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@job.Title</div>
                                            <div class="text-sm text-gray-500">@job.Company</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">@job.Employer.FullName</div>
                                    <div class="text-sm text-gray-500">@job.Employer.Email</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="@(job.Status == JobStatus.Active ? "bg-green-100 text-green-800" : job.Status == JobStatus.Pending ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800") px-2 inline-flex text-xs leading-5 font-semibold rounded-full">
                                        @(job.Status == JobStatus.Active ? "Hoạt động" : job.Status == JobStatus.Pending ? "Chờ duyệt" : "Không hoạt động")
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @job.CreatedAt.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex space-x-2">
                                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" 
                                           class="text-blue-600 hover:text-blue-900">Xem</a>
                                        
                                        @if (job.Status == JobStatus.Pending)
                                        {
                                            <form asp-action="ApproveJob" method="post" class="inline">
                                                <input type="hidden" name="id" value="@job.Id" />
                                                <button type="submit" class="text-green-600 hover:text-green-900">Duyệt</button>
                                            </form>
                                            <form asp-action="RejectJob" method="post" class="inline">
                                                <input type="hidden" name="id" value="@job.Id" />
                                                <button type="submit" class="text-red-600 hover:text-red-900">Từ chối</button>
                                            </form>
                                        }
                                        
                                        <form asp-action="DeleteJob" method="post" class="inline" 
                                              onsubmit="return confirm('Bạn có chắc muốn xóa công việc này?')">
                                            <input type="hidden" name="id" value="@job.Id" />
                                            <button type="submit" class="text-red-600 hover:text-red-900">Xóa</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>