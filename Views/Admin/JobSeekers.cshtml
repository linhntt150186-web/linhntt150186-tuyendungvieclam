@model List<JobHubMVC.Models.ApplicationUser>
@{
    ViewData["Title"] = "Quản lý ứng viên";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Quản lý ứng viên</h1>
            <p class="text-gray-600">Xem và quản lý tất cả ứng viên tìm việc</p>
        </div>

        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ứng viên</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số điện thoại</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Đơn ứng tuyển</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày tham gia</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var jobSeeker in Model)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4">
                                            <i class="fas fa-user text-green-600"></i>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@jobSeeker.FullName</div>
                                            <div class="text-sm text-gray-500">@jobSeeker.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @(jobSeeker.Phone ?? "Chưa cập nhật")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">@jobSeeker.Applications.Count đơn</div>
                                    <div class="text-sm text-gray-500">
                                        @jobSeeker.Applications.Count(a => a.Status == ApplicationStatus.Accepted) được chấp nhận
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @jobSeeker.CreatedAt.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex space-x-2">
                                        <button class="text-blue-600 hover:text-blue-900">Xem chi tiết</button>
                                        @if (jobSeeker.LockoutEnd == null || jobSeeker.LockoutEnd < DateTimeOffset.UtcNow)
                                        {
                                            <form asp-action="LockUser" method="post" class="inline">
                                                <input type="hidden" name="id" value="@jobSeeker.Id" />
                                                <button type="submit" class="text-red-600 hover:text-red-900">Khóa</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-red-500">Đã khóa</span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-6">
            <a asp-action="Index" class="text-blue-600 hover:text-blue-700 font-medium">
                ← Quay lại Dashboard
            </a>
        </div>
    </div>
</div>